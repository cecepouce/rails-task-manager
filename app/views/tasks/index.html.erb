<h1>My tasks</h1>
<ol>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task.id) %> / <%= link_to 'Edit', edit_path(task.id)  %> / <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></li>
  <% end %>
</ol>

<%= link_to 'Add a new Task', new_task_path(@task) %>
